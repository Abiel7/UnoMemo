<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    tools:context=".SpillerItem">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        card_view:cardCornerRadius="25dp"
        android:shadowColor="@color/black">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/spiller_item_constraint"
            android:layout_width="392dp"
            android:layout_height="wrap_content"
            android:padding="13dp">

            <TextView
                android:id="@+id/spiller_plassering_textview"
                android:layout_width="50dp"
                android:layout_height="25dp"
                android:gravity="center"
                android:textAppearance="?attr/textAppearanceHeadline6"
                card_view:layout_constraintBottom_toBottomOf="parent"
                card_view:layout_constraintEnd_toStartOf="@+id/spiller_navn_textview"
                card_view:layout_constraintHorizontal_bias="0.333"
                card_view:layout_constraintStart_toStartOf="parent"
                card_view:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/spiller_navn_textview"
                android:layout_width="150dp"
                android:layout_height="75dp"
                android:gravity="center"
                android:textAppearance="?attr/textAppearanceHeadline6"
                android:textSize="25sp"
                card_view:layout_constraintBottom_toBottomOf="parent"
                card_view:layout_constraintEnd_toEndOf="parent"
                card_view:layout_constraintHorizontal_bias="0.268"
                card_view:layout_constraintStart_toStartOf="parent"
                card_view:layout_constraintTop_toTopOf="parent"
                card_view:layout_constraintVertical_bias="0.384" />

            <TextView
                android:id="@+id/spiller_poeng_textview"
                android:layout_width="150dp"
                android:layout_height="75dp"
                android:layout_marginEnd="16dp"
                android:gravity="center"
                android:textAppearance="?attr/textAppearanceHeadline6"
                card_view:layout_constraintBottom_toBottomOf="parent"
                card_view:layout_constraintEnd_toEndOf="parent"
                card_view:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>

</layout>